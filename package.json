{
  "name": "htms",
  "version": "1.0.0",
  "description": "Secure HTML to JavaScript compiler",
  "main": "dist/main.js",
  "bin": {
    "htms": "dist/cli.js"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "tsc",
    "compile": "ts-node main.ts",
    "demo:build": "ts-node scripts/build-demos.ts",
    "demo:serve": "npm run build && npm run demo:build && ts-node scripts/serve-demos.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "escodegen": "^2.1.0",
    "esprima": "^4.0.1",
    "jsdom": "^22.1.0",
    "validator": "^13.11.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/escodegen": "^0.0.7",
    "@types/esprima": "^4.0.3",
    "@types/jest": "^29.5.3",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^20.8.0",
    "@types/validator": "^13.11.5",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.0"
  }
}
